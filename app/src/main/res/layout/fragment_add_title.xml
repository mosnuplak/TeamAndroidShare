<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecbcb"
    android:fillViewport="true">
<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecbcb"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/post_image"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="-50dp"
        android:src="@drawable/ic_camera_alt"
        android:text="@string/post_image"
        android:textColor="#ffff" />
    <EditText
        android:id="@+id/etTilteName"
        android:hint="@string/text_topic"
        android:maxLines="1"
        android:inputType="text"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:background="@drawable/btn_default_normal"
        android:backgroundTint="#ffff"
        android:imeOptions="actionNext"
        android:paddingBottom="2dp"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/etTitleDis"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_default_normal"
        android:backgroundTint="#ffff"
        android:hint="@string/text_description"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:paddingBottom="2dp" />


    <EditText
        android:id="@+id/etTitleLink"
        android:hint="@string/text_link"
        android:maxLines="1"
        android:inputType="text"
        android:layout_width="320dp"
        android:background="@drawable/btn_default_normal"
        android:backgroundTint="#ffff"
        android:imeOptions="actionDone"
        android:layout_height="56dp"
        android:paddingBottom="2dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btnAdd"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:text="@string/menu_add"
        android:textColor="#ffff" />
    <TextView
        android:id="@+id/tvAlert"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
</LinearLayout>
</RelativeLayout>