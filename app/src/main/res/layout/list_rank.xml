<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:id="@+id/rv_rank"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_height="@dimen/rank_l_image"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/rank_p_v"
                android:paddingRight="@dimen/rank_p_v"
                android:text="@string/rank_number"
                android:textSize="@dimen/rank_text_size"
                android:textStyle="bold" />

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="3"-->
                <!--android:weightSum="3">-->

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/rank_l_image"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/rank_p_v"
                    android:paddingRight="@dimen/rank_p_v"
                    android:text="@string/app_name"
                    android:textSize="@dimen/rank_text_size"
                    android:textStyle="bold" />
            <!--</LinearLayout>-->
            <TextView
                android:id="@+id/tv_totalLike"
                android:layout_width="0dp"
                android:layout_height="@dimen/rank_l_image"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/rank_p_v"
                android:paddingRight="@dimen/rank_p_v"
                android:text="@string/rank_number"
                android:textSize="@dimen/rank_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>